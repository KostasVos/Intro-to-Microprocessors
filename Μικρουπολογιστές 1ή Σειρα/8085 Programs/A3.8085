START:
LXI B,01F4H	;Αποθήκευση των 500 sec στους (BC)

LDA 2000H	;Είσοδος δεδομένων στον Αποθήκευση
CPI 63H		;Μεγαλύτερος του 99;
JNC GREATER	;Αν ναι μεταβαίνει στο GREATER, αλλιώς συνεχεια

MVI D,FFH	;D <- Συμπληρωμα ως προς 2 του 1
DECA:
INR D		;D++
SUI 0AH		;A = A-10
JNC DECA	;Aν δεν είναι <0 επαναλαμβάνεται

ADI 0AH		;Αφου <0, αυξάνω τον Α κατά 1
MOV E,A		;Προσωρινή αποθήκευση, ο Ε έχει τις μονάδες
MOV A,D	;Στον D βρίσκονται οι δεκάδες, μεταφέρονται στο Α
RLC			;4 αριστερές περιστροφές
RLC			;ωστε τα 4 MSB του Α να δείχνουν τις δεκάδες
RLC
RLC	
ADD E		;Προσθεση του E, ωστε τα 4 LSB να έχουν μονάδες
CMA
STA 3000H	;Εμφάνιση στα LED
JMP START	;Επανάληψη

GREATER:
MVI A,F0H	;Α <- (11110000), ωστε να αναψουν τα 4 LSB (αναστροφα LED)
STA 3000H
CALL DELB	;Καθυστέρηση
CMA			;Α <- (00001111), ωστε να ανάψουν τα 4 ΜSB led
STA 3000H
CALL DELB
JMP START	;Επιστροφή στην αρχή για νέα είσοδο
END